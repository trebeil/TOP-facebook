<h1><%= @name %> profile</h1>
<%= render @user %>

<h2><%= @name %> friends</h2>
<% if current_user == @user %>
  <%= render @friends %>
<% else %>
  <h3>Friends in common</h3>
  <%= render @friends_in_common %>
  <h3>Other friends</h3>
  <%= render @other_friends %>
<% end %>

<% if current_user == @user %>
  <h2>New post</h2>
  <%= render 'posts/post_form', :post => @post %>
<% end %>

<h2><%= @name %> recent posts</h2>
<% if current_user == @user || current_user.friendship_confirmed?(@user) %>
  <%= render @posts %>
<% else %>
  <div>Add <%= @user.name %> <%= @user.last_name %> as a friend to see his/her posts.</div>
<% end %>