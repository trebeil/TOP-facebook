<h1>New post</h1>

<%= turbo_frame_tag id='new_post' do %>
  <% if @post.errors.any? %>
    <div id='error_explanation'>
      <h3>Errors:</h3>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= render 'post_form', :post => @post %>
<% end %>